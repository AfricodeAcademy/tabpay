# Students .env.example file for TabPay Project 

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# Flask Security Configuration
SECRET_KEY=your_secret_key_here
SECURITY_PASSWORD_SALT=your_password_salt_here

# Mail Configuration
MAIL_SERVER=smtp.example.com
MAIL_PORT=465
MAIL_USERNAME=your_email@example.com
MAIL_PASSWORD=your_email_password
MAIL_USE_SSL=True
MAIL_USE_TLS=False
MAIL_DEFAULT_SENDER=your_email@example.com

# M-Pesa Configuration
MPESA_ENVIRONMENT=production  # or sandbox for testing
MPESA_CONSUMER_KEY=your_consumer_key_here
MPESA_CONSUMER_SECRET=your_consumer_secret_here
MPESA_SHORTCODE=your_business_shortcode
MPESA_PASSKEY=your_passkey_here
MPESA_STK_PUSH_SHORTCODE=your_stk_push_shortcode
MPESA_STK_PUSH_PASSKEY=your_stk_push_passkey

# M-Pesa Callback URLs
MPESA_CALLBACK_BASE_URL=https://your-domain.com
MPESA_VALIDATION_URL=/mpesa/c2b/validation
MPESA_CONFIRMATION_URL=/mpesa/c2b/confirmation

# API Base URL
API_BASE_URL=https://your-domain.com

